@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Role";
}

<h1>All Role</h1>
@if (Model.Any())
{
    <a style="width:auto" asp-action="CreateRole" asp-controller="Administration"
       class="btn btn-primary mb-3">Add New Role</a>

    foreach (var role in Model)
    {
        <div class="card">
            
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>

            <div class="card-footer">
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id"
                       class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user : @role.Name')">Delete</button>
                </form>

            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Role created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a style="width:auto" asp-action="CreateRole" asp-controller="Administration"
               class="btn btn-primary">Create Role</a>
        </div>
    </div>
}
